<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_time_listened_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    android:background="@android:color/black"
    tools:ignore="MissingDefaultResource">

    <!-- Back & Title -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_chevron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time listened"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Month -->
    <TextView
        android:id="@+id/text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="April 2025"
        android:layout_marginLeft="12dp"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Total Minutes -->
    <TextView
        android:id="@+id/text_main_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You listened to music for 862 minutes this month."
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Daily Average -->
    <TextView
        android:id="@+id/text_daily_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily average: 33 min"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_main_sentence"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Line Chart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_daily_average"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingClass" />
</androidx.constraintlayout.widget.ConstraintLayout>
