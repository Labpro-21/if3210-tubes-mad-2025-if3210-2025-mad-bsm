<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_streak_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:background="#121212"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingBottom="24dp"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_streak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Cover image -->
            <ImageView
                android:id="@+id/cover_streak"
                android:layout_width="346dp"
                android:layout_height="358dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_streak"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_streak_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="You had a 5-day streak"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cover_streak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/text_streak_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="You played Loose by Daniel Caesar day after day. You were on fire"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_streak_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Date range -->
            <TextView
                android:id="@+id/text_streak_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 21â€“25, 2025"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/text_streak_subtitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Share button -->
            <ImageButton
                android:id="@+id/button_share_streak"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/share_button"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/text_streak_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_streak_date"
                tools:ignore="TouchTargetSizeCheck,UseAppTint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
